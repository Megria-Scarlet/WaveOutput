<UserControl x:Class="MegriaCore.YMM4.WaveOutput.OptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MegriaCore.YMM4.WaveOutput"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="450"
             x:Name="root">
    <UserControl.Resources>
        <DataTemplate x:Key="ComboView">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ActualLabel}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ComboSelector">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ActualLabel}" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Unit}">
                    <TextBlock.Foreground>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
                    </TextBlock.Foreground>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:OutputOption/>
    </UserControl.DataContext>
    <StackPanel>
        <Expander Header="エンコード設定">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="サンプル数" HorizontalAlignment="Center"/>
                        <!-- UserControlに「root」という名前を付けて、下でバインドするときに「ElementName=root」とすることを忘れないこと！ -->
                        <!--<TextBox Text="{Binding Hertz}" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>-->
                        <ComboBox x:Name="sampleCombo" Grid.Column="1" ItemsSource="{Binding Samples}" SelectedIndex="{Binding SampleIndex}" VerticalContentAlignment="Center">
                            <ComboBox.ItemTemplateSelector>
                                <local:PersonTemplateSelector/>
                            </ComboBox.ItemTemplateSelector>
                        </ComboBox>
                        <Label Grid.Column="2" Content="{Binding ElementName=sampleCombo, Path=SelectedItem.Unit}" HorizontalAlignment="Left"/>
                    </Grid>
                    <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="フォーマット"/>
                        <!-- UserControlに「root」という名前を付けて、下でバインドするときに「ElementName=root」とすることを忘れないこと！ -->
                        <!--<TextBox Text="{Binding Hertz}" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>-->
                        <ComboBox Grid.Column="1" VerticalContentAlignment="Center" ItemsSource="{Binding BitsAndChannels}" DisplayMemberPath="Label" SelectedItem="{Binding BitsAndChannel}" SelectedIndex="1">
                        </ComboBox>
                    </Grid>
                </Grid>
            </StackPanel>
        </Expander>
    </StackPanel>
</UserControl>